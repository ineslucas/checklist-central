<div class="show-container">

  <div class="show-title-container <%= @checklist.category %>">
    <h2 class="individual-checklist-title"><%= @checklist.title %></h2>
    <p class="individual-checklist-description"><%= @checklist.description %></p>

    <%= link_to edit_checklist_path(@checklist) do %>
      <i class="edit-button fa-solid fa-pen"></i>
     <% end %>
  </div>

  <div id="tasks-wrapper">
    <%# The line below iterates through each task in the checklist's tasks collection and renders the _task.html.erb partial view for each task, creating the HTML structure for each task's display. %>
    <%# existing tasks %>
    <%= render @checklist.tasks %>

    <%# form to create new task for present checklist %>
    <%= render "tasks/form" %>
    <%# when the form is inside tasks_wrapper, you can target it - outside no. But why? %>
    <%# Because the form class is outlined INSIDE the id tasks_wrapper.%>
  </div>
</div>

<div class="links">
  <%= link_to checklist_path(@checklist), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fas fa-trash" style="color: #AB3687;"></i>
  <% end %>

  <%= link_to url_for(:back) do %>
    <i class="fas fa-arrow-left" style="color: #AB3687;"></i>
  <% end %>

  <%# <%= link_to 'All lists', checklists_path %>
</div>
